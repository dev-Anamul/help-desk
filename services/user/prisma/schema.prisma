generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum Role {
  ADMIN
  SUPERVISOR
  EXPERT
  USER
}

model User {
  id              String   @id @default(cuid())
  authId          String   @unique
  usernameOrEmail String   @unique
  firstName       String
  lastName        String
  avatar          String?
  phone           String
  address         String
  role            Role     @default(USER)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
